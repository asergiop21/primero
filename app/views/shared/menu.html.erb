<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.js"></script>
<link href="{{ asset('bundles/sftracert/css/menu.css') }}" type="text/css" rel="stylesheet" />
<script>
$(document).ready(function() {
	$('.menu li').click(function(e) {
		e.preventDefault();
		$('.menu li').removeClass('botonMenuActivado').css({'border-color':'#fff'}); 
		$(this).addClass('botonMenuActivado').css({'border-color':'#d7d7d7'});
		var pestanya = $(this).text();
		$('.botonesSubMenu').fadeOut();
		$('#'+pestanya).fadeIn();
	});
	$('.botonSubMenu').click(function(e) {
		e.preventDefault(); 
		$('.botonSubMenu').css({'background-color':'#f1f1f1', 'z-index':'0','border-top':'1px solid #f1f1f1','border-left':'1px solid #f1f1f1','border-right':'1px solid #f1f1f1'});
		$(this).css({'background-color':'#fff', 'z-index':'1','border-top':'1px solid #d7d7d7','border-left':'1px solid #d7d7d7','border-right':'1px solid #d7d7d7'});
	});
})	
</script>
</head>	
